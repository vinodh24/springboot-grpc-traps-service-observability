<configuration>

    <!-- Read Spring properties -->
    <springProperty scope="context" name="SERVICE_NAME" source="spring.application.name"/>
    <springProperty scope="context" name="ENV" source="env:dev"/>

    <!-- ===========================
         Console Appender
    ============================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} -
                trace_id=%X{trace_id} span_id=%X{span_id} - %msg%n
            </pattern>
        </encoder>
    </appender>


    <!-- ===========================
         Loki Appender (JSON)
    ============================ -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">

        <!-- JSON log format (single line JSON) -->
        <format>
            <pattern>
                {"timestamp":"%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ}",
                "level":"%level",
                "logger":"%logger",
                "thread":"%thread",
                "message":"%msg",
                "service":"${SERVICE_NAME}",
                "environment":"${ENV}",
                "trace_id":"%X{trace_id}",
                "span_id":"%X{span_id}"}
            </pattern>
        </format>

        <loki4j>
            <url>http://loki:3100/loki/api/v1/push</url>
            <batchSize>20</batchSize>
            <batchWait>2000</batchWait>

            <!-- Loki Labels -->
            <label>
                <service>${SERVICE_NAME}</service>
                <environment>${ENV}</environment>
                <level>%level</level>
                <trace_id>%X{trace_id}</trace_id>
                <span_id>%X{span_id}</span_id>
            </label>
        </loki4j>

    </appender>


    <!-- ===========================
         File Appender
    ============================ -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} -
                trace_id=%X{trace_id} span_id=%X{span_id} - %msg%n
            </pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>


    <!-- ROOT LOGGER -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOKI"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
